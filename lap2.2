#include <stdio.h>
#include <string.h>
#include <stdlib.h> 
char* reverse(char str1[]) {
    int len = strlen(str1);
    char *str2 = (char*)malloc((len + 1) * sizeof(char)); 

    for (int i = len - 1, j = 0; i >= 0; --i, ++j) {
        str2[j] = str1[i];
    }
    str2[len] = '\0'; 
    return str2; 
}

int main() {
    char text[50] = "I Love You";
    char *out;
    out = reverse(text);
    printf("Original: %s\n", text);
    printf("Reversed: %s\n", out);


    return 0;
}
