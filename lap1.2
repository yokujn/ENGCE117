#include <stdio.h>
#include <stdlib.h> 

void GetSet(int **data, int *num) {
    printf("Enter the number of elements: ");
    scanf("%d", num);
    

    *data = (int*)malloc(*num * sizeof(int));
    
    if (*data != NULL) {
        for(int i = 0; i < *num; ++i) {
            printf("Enter element %d: ", i+1);
            scanf("%d", (*data) + i);
        }
    } else {
        printf("Memory allocation failed\n");
        *num = 0; 
    }
}

int main() {
    int *data, num;
    GetSet(&data, &num);

    printf("You entered: ");
    for(int i = 0; i < num; ++i) {
        printf("%d ", data[i]);
    }
    printf("\n");

    free(data);

    return 0;
}//end function
