#include <stdio.h>

struct student {
    char name[20];
    int age;
    char sex;
    float gpa;
};

struct student upgrade(struct student child) {
    // เพิ่ม gpa ขึ้นตามเพศของนักเรียน
    if (child.sex == 'M') {
        // สำหรับผู้ชาย เพิ่ม 10%
        child.gpa *= 1.1;
    } else if (child.sex == 'F') {
        // สำหรับผู้หญิง เพิ่ม 20%
        child.gpa *= 1.2;
    }
    // คืนค่าโครงสร้าง student ที่อัพเกรดแล้ว
    return child;
}

int main() {
    struct student aboy;
    aboy.sex = 'M';
    aboy.gpa = 3.00;

    // เรียกใช้งานฟังก์ชัน upgrade() โดยส่งโครงสร้าง student เข้าไป
    aboy = upgrade(aboy);

    // พิมพ์ค่า GPA หลังการอัพเกรด
    printf("%.2f", aboy.gpa);

    return 0;
}
