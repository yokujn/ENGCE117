#include <stdio.h>

// สร้างฟังก์ชัน go() ที่รับพอยน์เตอร์ที่ชี้ไปยังพอยน์เตอร์ที่ชี้ไปยัง int
// และพอยน์เตอร์ที่ชี้ไปยัง int
void go(int ***p, int **z) {
    // เปลี่ยนค่าพอยน์เตอร์ที่ p ชี้ไปให้ชี้ไปที่พอยน์เตอร์ z
    *p = z;
}

int main() {
    // ประกาศตัวแปร b และ c และกำหนดค่าให้กับพวยน์เตอร์ที่ชี้ไปยัง int
    int *b = new int; *b = 10;
    int *c = new int; *c = 20;
    
    // ประกาศพอยน์เตอร์สามระดับ a และกำหนดให้ชี้ไปยังพอยน์เตอร์ที่ชี้ไปยัง int
    int **a;
    
    // เรียกใช้ฟังก์ชัน go() โดยส่งพอยน์เตอร์ที่ชี้ไปยัง a และ b มา
    go(&a, &b);

    // พิมพ์ค่าที่ a ชี้ไป
    printf("%d %p %p %p ", **a, *a, a, &a);

    // เรียกใช้ฟังก์ชัน go() อีกครั้ง โดยส่งพอยน์เตอร์ที่ชี้ไปยัง a และ c มา
    go(&a, &c);

    // พิมพ์ค่าที่ a ชี้ไป
    printf("%d %p %p %p ", **a, *a, a, &a);

    return 0;
}
